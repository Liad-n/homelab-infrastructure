#cloud-config

hostname: k3s-a

chpasswd:
  expire: false
  list:
  - ubuntu:$UBUNTU_PASSWORD

# Enable password authentication with the SSH daemon
ssh_pwauth: false
ssh_import_id:
- gh:billimek
ssh_authorized_keys:
  - "ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIIyglgJgujf6OfI6xtd1Spsl7drCp5amrI4eTJ9D+p96 jeff@home"
  - "ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIOhoTopiSHEThROYKpNhsJsOKG1xvLkq4I3DYdQepY8k jeff@wsl"
  - "ssh-rsa  (none)"

## Update apt database and upgrade packages on first boot
package_update: true
package_upgrade: true

packages:
- curl
- wget
- htop
- nfs-common
- qemu-guest-agent

ntp:
  enabled: true
  servers:
    - 10.0.7.1

runcmd:
- ln -sfn /run/systemd/resolve/resolv.conf /etc/resolv.conf
- apt-get install -fy linux-modules-extra-$(uname -r)
- 'curl -sfL https://get.k3s.io | K3S_URL=https://k3s-0:6443 K3S_TOKEN=$K3S_TOKEN sh -s - --node-label "k3s-upgrade=enabled"'
- apt autoremove -fy
- sync
- reboot -f
